<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE project>
<project default="package" name="xjaf2x-start">
	<property environment="env" />
	<fail unless="env.JBOSS_HOME" message="Environment variable JBOSS_HOME not set." />
	<property name="dest.dir" value="${env.JBOSS_HOME}/xjaf2x" />
	<property name="dest.file" value="${dest.dir}/${ant.project.name}.jar" />
	<property name="modules" value="../modules/system/layers/base/org" />

	<target name="clean">
		<delete file="${dest.file}" />
		<mkdir dir="${dest.dir}" />
	</target>

	<target name="package" depends="clean">
		<jar destfile="${dest.file}" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="xjaf2x.start.JBossCLI" />
				<attribute name="Class-Path" value=". ${modules}/infinispan/main/infinispan-core-5.2.6.Final-redhat-1.jar ${modules}/jboss/as/cli/main/jboss-as-cli-7.2.0.Final-redhat-8.jar ${modules}/jboss/as/controller-client/main/jboss-as-controller-client-7.2.0.Final-redhat-8.jar ${modules}/jboss/as/naming/main/jboss-as-naming-7.2.0.Final-redhat-8.jar ${modules}/jboss/ejb-client/main/jboss-ejb-client-1.0.21.Final-redhat-1.jar ${modules}/jboss/ejb3/main/jboss-ejb3-ext-api-2.0.0-redhat-2.jar ${modules}/jboss/as/jaxrs/main/jboss-as-jaxrs-7.2.0.Final-redhat-8.jar ${modules}/jboss/msc/main/jboss-msc-1.0.4.GA-redhat-1.jar ${modules}/jboss/as/process-controller/main/jboss-as-process-controller-7.2.0.Final-redhat-8.jar ../bin/client/jboss-client.jar ../bin/client/jboss-cli-client.jar ./xjaf2x-server.jar" />
			</manifest>
			<fileset dir="bin" />
		</jar>
	</target>
</project>
