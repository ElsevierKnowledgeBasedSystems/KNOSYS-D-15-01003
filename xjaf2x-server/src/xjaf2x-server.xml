<?xml version="1.0" encoding="UTF-8"?>
<xjaf2x-server xmlns="http://perun.pmf.uns.ac.rs/xjaf2x/xjaf2x-server" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://perun.pmf.uns.ac.rs/xjaf2x/xjaf2x-server xjaf2x-server.xsd ">
	
	<!-- 
		attributes:
			mode: master or slave
			address: network address of this node, required
			name: cluster-wide unique name of this node, required if mode = slave
			master: address of the master node, required if mode = slave
	 -->
	<server mode="master" address="localhost" />
	
	<!-- 
		if mode = master, specify network address of at least one slave node 
	-->
	<cluster>
		<slave>ultrabook</slave>
	</cluster>
	
	<!-- 
		if mode = master, uncomment to make this computer a member of the global network
		attributes:
			address: network address of this computer
			site: globally-unique name of this computer
	-->
	<!-- relay address="192.168.8.1" site="site1" /-->
	
	<agents>
		<agent family="org.xjaf2x.server.agents.PingAgent" stateful="false" />
		<agent family="org.xjaf2x.server.agents.aco.tsp.MapAgent" />
		<agent family="org.xjaf2x.server.agents.aco.tsp.StarterAgent" stateful="false" />
		<agent family="org.xjaf2x.server.agents.cnet.CNetManager" />
		<agent family="org.xjaf2x.server.agents.cnet.CNetStarter" />
		<agent family="org.xjaf2x.server.agents.cnet.CNetContractor" />
		<agent family="org.xjaf2x.server.agents.jason.HelloJason" jason="true" />
		<agent family="org.xjaf2x.server.agents.jason.FactJason" jason="true" />
	</agents>
</xjaf2x-server>
